package ming.tag;

import java.io.IOException;

import javax.servlet.jsp.tagext.TagSupport;

public class TableFormTag extends TagSupport {
	private static final long serialVersionUID = 4413127515990076611L;

	private String columnValues;
	
	public String getColumnValues() {
		return columnValues;
	}

	public void setColumnValues(String columnValues) {
		this.columnValues = columnValues;
	}

	public int doStartTag(){
		String values[] = columnValues.split(",");
		try {
			StringBuffer sb = new StringBuffer();
			sb.append("<thead><tr>");
			for ( int i = 0; i < values.length; i++){
				sb.append("<td>").append(values[i]).append("</td>");
			}
			sb.append("</tr></thead>");
			
			
			pageContext.getOut().println("<table><thead></thead></table>");
		} catch (IOException ignored) {
		}
		return EVAL_PAGE;
	}
}
